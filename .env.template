# Environment Configuration Template for Production
# Copy this file to .env and fill in the actual values

# Application Environment
NODE_ENV=production
HOST=0.0.0.0
PORT=8080

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Database Configuration
MONGO_URI=mongodb://your_db_user:your_secure_password@mongodb:27017/patientoutcome?authSource=admin
MONGODB_USERNAME=your_db_user
MONGODB_PASSWORD=your_secure_password
MONGODB_DATABASE=patientoutcome

# Rate Limiting
COMMON_RATE_LIMIT_MAX_REQUESTS=100
COMMON_RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
# IMPORTANT: Generate a strong, random secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Password Hashing
HASH_SALT_ROUNDS=10

# Allow database seeding in production (use with caution!)
# Set to 'true' only for initial deployment with demo data
# ALLOW_SEED=false

# SMTP Configuration for Feedback/Email
